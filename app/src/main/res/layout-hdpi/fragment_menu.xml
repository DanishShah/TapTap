<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical|center_horizontal"
    android:background="#101010">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:text="TapTap!"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#3d5afe"
            android:textSize="60sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/ic_easy"
                android:src="@drawable/ic_easy"
                android:layout_marginRight="20dp" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/ic_med"
                android:src="@drawable/ic_med" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/ic_hard"
                android:src="@drawable/ic_hard"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/game_mode"
            android:src="@drawable/game_modes"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/high_score"
                android:src="@drawable/ic_high_score" />

            <ImageView
                android:id="@+id/volume"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_volume_on"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp" />


            <ImageView
                android:id="@+id/info"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_info" />

            <ImageView
                android:id="@+id/rate"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_rate"
                android:layout_marginLeft="20dp" />

            <ImageView
                android:id="@+id/rule"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_rule"
                android:layout_marginLeft="20dp" />


        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/r_info"
        android:visibility="invisible"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/r_image"
            android:background="#96000000"
            android:layout_centerInParent="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Designed &amp;\n Developed by"
            android:id="@+id/t_1"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:layout_centerInParent="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danish Shah"
            android:id="@+id/t_2"
            android:textSize="30sp"
            android:layout_alignWithParentIfMissing="false"
            android:layout_below="@+id/t_1"
            android:layout_centerInParent="true" />

    </RelativeLayout>


</RelativeLayout>